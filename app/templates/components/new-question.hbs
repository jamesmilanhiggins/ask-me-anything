{{#if addNewQuestion}}
  <h2>New Question</h2>
  <div>
   <form>
     <div class="form-group">
       <label for="content">Question</label>
       {{input value=content id="content"}}
     </div>

     <div class="form-group">
       <label for="author">Name</label>
       {{input value=author id="author"}}
     </div>

     <div class="form-group">
       <label for="notes">Notes</label>
       {{input value=notes id="notes"}}
     </div>

     <button class="btn btn-info"{{action 'saveQuestion1'}}>Save</button>
   </form>
 </div>
{{else}}
  <button class="btn btn-success"{{action 'questionFormShow'}}>New Question</button>
{{/if}}
